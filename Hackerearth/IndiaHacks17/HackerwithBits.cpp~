}

int main()
{
    int len;
    cin>>len;

    bitset<len> arr;
    vector<int> zero_pos, one_pos;
    for(int i = 0; i < len; i++)
    {
        int no;
        cin>>no;
        arr[i] = no;
        if(no == 0)
            zero_pos.push_back(i);
        else
            one_pos.push_back(i);
    }

    cout<<longest_seq(arr, zero_pos, one_pos)<<endl;

    return 0;
}