import java.util.*;
import static java.lang.System.out;

class chefsign {

    static int num(String s)
    {
        int len = s.length();

        if((len == 1)&&(s.charAt(0)=='='))
        {
            return 1;
        }
        int max = -1;
        char p = ' ';
        int k = 0;

        for(int i = 0; i < len; i++)
        {
            if(s.charAt(i) == '=')
            {
                continue;
            }
            else if(s.charAt(i)== p)
            {
                k = k+1;
            }
            else
            {
                if(k>max)
                {
                    max = k;
                }
                p = s.charAt(i);
                k = 1;
            }

        }

        if(k>max)
        {
            max = k;
        }
        return (max+1);
    }

    public static void main(String... args) {

        Scanner key = new Scanner(System.in);
        int x = key.nextInt();

        for(int i = 0; i < x; i++)
        {
            String s = key.next();
            out.println(num(s));
        }

    }

}