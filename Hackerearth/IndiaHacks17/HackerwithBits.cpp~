#include <bits/stdc++.h>

using namespace std;

int count_ones(bitset<int> arr)
{
    int val = 0, max_val = 0;
    for(int i = 0; i < arr.size(); i++)
    {
        if(arr[i] == 1)
            val++;
        else
        {
            if(val > max_val)
                max_val = val;
            val = 0;
        }
    }
    return max_val;
}

